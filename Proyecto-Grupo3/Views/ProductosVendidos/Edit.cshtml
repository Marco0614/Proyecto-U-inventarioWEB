@model Proyecto_Grupo3.Models.TProductosVendido

@{
    ViewData["Title"] = "Editar Producto en Stock";
}

<main class="my-5">
    <div class="containern p-3">
        <div class=" row pt-4">
            <div>
                <h1 class="my-3">Editar Producto en Inventario</h1>
            </div>
            <form asp-action="Edit">
                <div class="border p-3 mt-4">
                    <div class="row pb-2">
                        <h2 class="text-primary">Producto en Inventario</h2>
                        <hr />
                    </div>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="CodigoProducto" />
                    <div class="mb-3">
                        <label asp-for="CodigoTipoProducto"></label>
                        <select asp-for="CodigoTipoProducto" class="form-control" asp-items="ViewBag.CodigoTipoProducto"></select>
                        <span asp-validation-for="CodigoTipoProducto" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="DescripcionProducto"></label>
                        <input asp-for="DescripcionProducto" class="form-control" />
                        <span asp-validation-for="DescripcionProducto" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Precio"></label>
                        <input asp-for="Precio" class="form-control" />
                        <span asp-validation-for="Precio" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        @Html.LabelFor(u => u.Estado)
                        @Html.DropDownListFor(u => u.Estado, new List<SelectListItem>
                        {
                        new SelectListItem() {Text = "Elija una opcion", Value = "Elija una opcion", Disabled = true, Selected = true},
                        new SelectListItem() {Text = "Administrador", Value = "Activo"},
                        new SelectListItem() {Text = "Vendedor", Value = "Inactivo"},

                        }, new { @class = "form-control" })
                        @Html.ValidationMessage("Estado")
                        <span asp-validation-for="Estado" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Cantidad"></label>
                        <input asp-for="Cantidad" class="form-control" />
                        <span asp-validation-for="Cantidad" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-outline-primary" style="width:150px">Actualizar</button>
                    <a asp-controller="ProductosVendidos" asp-action="Index" class="btn btn-outline-secondary" style="width:150px">
                        Volver
                    </a>
                </div>
            </form>
        </div>
    </div>
</main>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
