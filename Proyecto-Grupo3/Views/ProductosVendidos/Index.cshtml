@model IEnumerable<Proyecto_Grupo3.Models.TProductosVendido>

@{
    ViewData["Title"] = "Productos Vendidos";
}

<main class="my-5">
    <div class="containern p-3">
        <div class="row pt-4">
            <div class="col-6">
                <h2 class="text-primary">Productos Vendidos</h2>
            </div>
        </div>
        <br /><br />

        <table class="table table-striped table-hover" style="width:100%">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.CodigoTipoProducto)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DescripcionProducto)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Precio)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Estado)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Cantidad)
                    </th>
                    <th>

                    </th>
                </tr>
            </thead>
            <tbody>
        @foreach (var item in Model) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CodigoTipoProductoNavigation.CodigoTipoProducto)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DescripcionProducto)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Precio)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Estado)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Cantidad)
                    </td>
                    <td>
                    <td>
                        <div class=" w-75 btn-group" role="group">
                            <a asp-controller="ProductosVendidos" asp-action="Details" asp-route-id="@item.CodigoProducto" class="btn btn-outline-info mx-2"> <i class="bi bi-info-circle"></i>Consultar</a>
                            <a asp-controller="ProductosVendidos" asp-action="Edit" asp-route-id="@item.CodigoProducto" class="btn btn-outline-primary mx-2"> <i class="bi bi-pencil-square"></i>Editar</a>
                            <a asp-controller="ProductosVendidos" asp-action="Delete" asp-route-id="@item.CodigoProducto" class="btn btn-outline-danger mx-2"> <i class="bi bi-trash-fill"></i>Eliminar</a>
                        </div>
                    </td>
                </tr>
        }
            </tbody>
        </table>
    </div>
</main>