@model Proyecto_Grupo3.Models.TFacturasUsuario

@{
    ViewData["Title"] = "Editar Factura de Usuario";
}

<main class="my-5">
    <div class="containern p-3">
        <div class=" row pt-4">
            <div>
                <h1 class="my-3">Editar Factura de Usuario</h1>
            </div>
            <form asp-action="Edit">
                <div class="border p-3 mt-4">
                    <div class="row pb-2">
                        <h2 class="text-primary">Factura de Usuarios</h2>
                        <hr />
                    </div>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="IdFacturasUsuario" />
                    <div class="mb-3">
                        <label asp-for="IdFactura"></label>
                        <select asp-for="IdFactura" class="form-control" asp-items="ViewBag.IdFactura"></select>
                        <span asp-validation-for="IdFactura" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="IdCliente"></label>
                        <select asp-for="IdCliente" class="form-control" asp-items="ViewBag.IdCliente" />
                        <span asp-validation-for="IdCliente" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-outline-primary" style="width:150px">Actualizar</button>
                    <a asp-controller="FacturasUsuario" asp-action="Index" class="btn btn-outline-secondary" style="width:150px">
                        Volver
                    </a>
                </div>
            </form>
        </div>
    </div>
</main>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
