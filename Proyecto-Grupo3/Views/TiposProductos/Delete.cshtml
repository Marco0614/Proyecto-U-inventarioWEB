@model Proyecto_Grupo3.Models.TTiposProducto

@{
    ViewData["Title"] = "Eliminar Tipo de Producto";
}

<main class="my-5">
    <div class="containern p-3">
        <div class=" row pt-4">
            <div>
                <h1 class="my-3">Eliminar Tipo Producto</h1>
            </div>
            <form asp-action="Delete">
                <input type="hidden" asp-for="CodigoTipoProducto" />
                <div class="border p-3 mt-4">
                    <div class="row pb-2">
                        <h2 class="text-primary">Tipo Producto</h2>
                        <hr />
                    </div>
                    <div class="mb-3">
                        <label asp-for="CodigoTipoProducto"></label>
                        <input asp-for="CodigoTipoProducto" disabled class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label asp-for="DescripcionTipoProducto"></label>
                        <input asp-for="DescripcionTipoProducto" disabled class="form-control" />
                    </div>
                    <button type="submit" class="btn btn-outline-danger" style="width:150px">Eliminar</button>
                    <a asp-controller="TiposProductos" asp-action="Index" class="btn btn-outline-secondary" style="width:150px">
                        Volver
                    </a>
                </div>
            </form>
        </div>
    </div>
</main>
