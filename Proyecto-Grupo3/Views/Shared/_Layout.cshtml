@using Microsoft.AspNetCore.Identity

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Farmacia</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
    <link rel="stylesheet" href="~/Proyecto_Grupo3.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-dark bg-dark fixed-top">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Farmacia</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasDarkNavbar" aria-controls="offcanvasDarkNavbar" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="offcanvas offcanvas-end text-bg-dark bg-body" tabindex="-1" id="offcanvasDarkNavbar" aria-labelledby="offcanvasDarkNavbarLabel">
                    <div class="offcanvas-header">
                        <h5 class="offcanvas-title text-light" id="offcanvasDarkNavbarLabel">Menú Farmacia</h5>
                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="offcanvas" aria-label="Close"></button>
                    </div>
                    <div class="offcanvas-body">
                        <ul class="navbar-nav justify-content-end flex-grow-1 pe-3">
                            <li class="nav-item">
                                <a class="nav-link active" asp-area="" asp-controller="Home" asp-action="Index">>Home</a>
                            </li>
                            @if (User.IsInRole("Administrador") || User.IsInRole("Vendedor") || User.IsInRole("Contabilidad"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link active" asp-area="" asp-controller="Facturas" asp-action="Index">>Facturas</a>
                                </li>
                            }
                            @if (User.IsInRole("Administrador") || User.IsInRole("Vendedor") || User.IsInRole("Contabilidad"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link active" asp-area="" asp-controller="FacturasUsuarios" asp-action="Index">>Facturas por Usuario</a>
                                </li>
                            }
                            @if (User.IsInRole("Administrador"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link active" asp-area="" asp-controller="Productos" asp-action="Index">>Productos</a>
                                </li>
                            }
                            @if (User.IsInRole("Administrador"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link active" asp-area="" asp-controller="ProductosVendidos" asp-action="Index">>Mantenimiento de Productos</a>
                                </li>
                            }
                            @if (User.IsInRole("Administrador") || User.IsInRole("Vendedor"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link active" asp-area="" asp-controller="RegistroClientes" asp-action="Index">>Clientes</a>
                                </li>
                            }
                            @if (User.IsInRole("Administrador"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link active" asp-area="" asp-controller="RegistroUsuarios" asp-action="Index">>Usuarios</a>
                                </li>
                            }
                            @if (User.IsInRole("Administrador"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link active" asp-area="" asp-controller="TiposProductos" asp-action="Index">>Tipos de Productos</a>
                                </li>
                            }
                            <li class="nav-item">
                                <a class="nav-link active" asp-area="" asp-controller="Home" asp-action="CerrarSesion">>Cerrar Sesion</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @* Vista parcial para las notificaciones *@
            <partial name="Notificaciones" />
            @RenderBody()
        </main>
    </div>

    <footer class="sticky-footer border-top bg-white">
        <div class="container my-auto">
            <div class="copyright text-center my-auto">
                <span>&copy; 2023 - La Farmacia se reserva el derecho de admisión</span>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
