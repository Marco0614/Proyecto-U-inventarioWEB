@model IEnumerable<Proyecto_Grupo3.Models.TRegistroUsuario>

@{
    ViewData["Title"] = "Usuarios";
}

<main class="my-5">
    <div class="containern p-3">
        <div class="row pt-4">
            <div class="col-6">
                <h2 class="text-primary">Usuario</h2>
            </div>
            <div class="col-6 text-end">
                <a asp-controller="RegistroUsuarios" asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i>&nbsp; Crear Nuevo Usuario
                </a>
            </div>
        </div>
        <br /><br />

        <table class="table table-striped table-hover" style="width:100%">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.IdentificacionUsuario)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.NombreCompleto)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Correo)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TipoUsuario)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Estado)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Contraseña)
                    </th>
                    <th>

                    </th>
                </tr>
            </thead>
            <tbody>
        @foreach (var item in Model) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.IdentificacionUsuario)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NombreCompleto)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Correo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TipoUsuario)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Estado)
                    </td>
                    <td>
                            @Html.DisplayFor(modelItem => item.Contraseña)
                    </td>
                    <td>
                        <div class=" w-75 btn-group" role="group">
                            <a asp-controller="RegistroUsuarios" asp-action="Details" asp-route-id="@item.IdUsuario" class="btn btn-outline-info mx-2"> <i class="bi bi-info-circle"></i>Consultar</a>
                            <a asp-controller="RegistroUsuarios" asp-action="Edit" asp-route-id="@item.IdUsuario" class="btn btn-outline-primary mx-2"> <i class="bi bi-pencil-square"></i>Editar</a>
                            <a asp-controller="RegistroUsuarios" asp-action="Delete" asp-route-id="@item.IdUsuario" class="btn btn-outline-danger mx-2"> <i class="bi bi-trash-fill"></i>Eliminar</a>
                        </div>
                    </td>
                </tr>
        }
            </tbody>
        </table>
    </div>
</main>
