@model IEnumerable<Proyecto_Grupo3.Models.TProducto>

@{
    ViewData["Title"] = "Productos";
}

<main class="my-5">
    <div class="containern p-3">
        <div class="row pt-4">
            <div class="col-6">
                <h2 class="text-primary">Productos</h2>
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Productos" asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i>&nbsp; Crear Nuevo Producto
                </a>
            </div>
        </div>
        <br /><br />

        <table class="table table-striped table-hover" style="width:100%">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.NombreCategoria)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.NombreProducto)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CodigoTipoProducto)
                    </th>
                    <th>

                    </th>
                </tr>
            </thead>
            <tbody>
        @foreach (var item in Model) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.NombreCategoria)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NombreProducto)
                    </td>
                    <td>
                        @Html.DisplayNameFor(model => model.CodigoTipoProducto)
                    </td>
                    <td>
                        <div class=" w-75 btn-group" role="group">
                            <a asp-controller="Productos" asp-action="Details" asp-route-id="item.NombreCategoria" class="btn btn-outline-info mx-2"> <i class="bi bi-info-circle"></i>Consultar</a>
                            <a asp-controller="Productos" asp-action="Edit" asp-route-id="item.NombreCategoria" class="btn btn-outline-primary mx-2"> <i class="bi bi-pencil-square"></i>Editar</a>
                            <a asp-controller="Productos" asp-action="Delete" asp-route-id="item.NombreCategoria" class="btn btn-outline-danger mx-2"> <i class="bi bi-trash-fill"></i>Eliminar</a>
                        </div>
                    </td>
                </tr>
        }
            </tbody>
        </table>
    </div>
</main>