@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>LogIn</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body class="bg-secondary bg-gradient">
    <div class="container mt-5 pt-5">
        <div class="row justify-content-center">
        <div class="col-12 col-xl-4 col-md-6">
            <div class="card bg-info">
                <div class="card-header">Iniciar Sesion</div>
            </div>
            <div class="card-body">
                <form asp-controller="LogIn" asp-action="IniciarSesion" method="post">
                <div class="mb-3">
                    <label for="" class="form-label">Email</label>
                    <input type="email" class="form-control" placeholder="Digite su correo" required name="correo"/>
                </div>
                <div class="mb-3">
                    <label for="" class="form-label">Contraseña</label>
                            <input type="password" class="form-control" placeholder="Digite su contraseña" required name="contrasena" />
                </div>
                @if (ViewData["Mensaje"] != null)
                {
                    <div class="form-group">
                        <div class="alert alert-danger" role="alert">
                            @ViewData["Mensaje"]
                        </div>
                    </div>    
                }
                <div class="d-grid gap-2 mb-3">
                    <button type="submit" class="btn btn-primary">Ingresar</button>
                </div>
                <div class="d-grid gap-2 mb-3">
                    <a asp-controller="LogIn" asp-action="Registrarse" class="btn btn-warning">
                    <i class="bi bi-plus-circle"></i>&nbsp; Crear Nuevo Usuario
                    </a>
                </div>
                </form>
            </div>
        </div>
    </div>
    </div>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>